{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@layouts/*": ["./src/layouts/*"],
      "@components/*": ["./src/components/*"],
      "@partials/*": ["./src/layouts/partials/*"],
      "@shortcodes/*": ["./src/layouts/shortcodes/*"],
      "@config/*": ["./src/config/*"],
      "@content/*": ["./src/content/*"],
      "@styles/*": ["./src/styles/*"],
      "@lib/*": ["./src/lib/*"],
      "@images/*": ["./src/images/*"]
    }
  }
}
