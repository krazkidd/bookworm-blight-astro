---
import Logo from "./Logo.astro";
import menu from "@config/menu.json";

interface NavigationLink {
  name: string;
  url: string;
  children?: NavigationLink[];
  outline?: boolean;
}

const main: NavigationLink[] = menu.main;
---

<header class="container">
  <nav class="flex flex-wrap justify-between p-2 md:px-0">
    <!-- logo -->
    <Logo class="self-center" />
    <!-- navbar toggler -->
    <input id="nav-toggle" type="checkbox" class="hidden" />
    <label
      id="show-button"
      for="nav-toggle"
      class="flex cursor-pointer items-center text-black md:hidden"
    >
      <svg class="h-6 fill-current" viewBox="0 0 20 20">
        <title>Menu Open</title>
        <path d="M0 3h20v2H0V3z m0 6h20v2H0V9z m0 6h20v2H0V0z"></path>
      </svg>
    </label>
    <label
      id="hide-button"
      for="nav-toggle"
      class="order-2 hidden cursor-pointer items-center text-black md:order-1"
    >
      <svg class="h-6 fill-current" viewBox="0 0 20 20">
        <title>Menu Close</title>
        <polygon
          points="11 9 22 9 22 11 11 11 11 22 9 22 9 11 -2 11 -2 9 9 9 9 -2 11 -2"
          transform="rotate(45 10 10)"></polygon>
      </svg>
    </label>
    <!-- /navbar toggler -->

    <ul
      id="nav-menu"
      class="text-center md:text-left text-lg hidden w-full md:flex lg:gap-4 md:w-auto"
    >
      {
        main.map((navLink) => (
          <>
            {navLink.children ? (
              <li class="nav-dropdown group relative cursor-pointer mx-1">
                <span class="inline-flex items-center p-1 rounded text-dark transition hover:text-primary md:p-2 outline-2" class:list={[{ 'outline': navLink.outline }]}>
                  {navLink.name}
                  <svg class="h-5 w-5 fill-current" viewBox="0 0 20 20">
                    <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" />
                  </svg>
                </span>
                <ul class="z-10 rounded-lg bg-white px-6 py-3 shadow transition hidden group-hover:block md:invisible md:absolute md:block md:opacity-0 md:group-hover:visible md:group-hover:opacity-100">
                  {navLink.children?.map((childNavLink) => (
                    <li class="mb-1">
                      <a href={childNavLink.url} class="block min-w-[150px] py-1 text-dark transition hover:text-primary">
                        {childNavLink.name}
                      </a>
                    </li>
                  ))}
                </ul>
              </li>
            ) : (
              <li class="mx-1">
                <a href={navLink.url} class="inline-flex items-center p-1 text-lg rounded text-dark transition hover:text-primary md:p-2 outline-2" class:list={[{ 'outline': navLink.outline }]}>
                  {navLink.name}
                </a>
              </li>
            )}
          </>
        ))
      }
    </ul>
  </nav>
</header>
